
<div class="row">
        <div class="col-sm-12 col-md-8 col-md-offset-3 col-lg-6">
           <h2>You orders</h2>
           {{#each orders}}
                <div class="panel panel-default">
                  <div class="panel-body">
                        <ul class="list-group">
                          {{#each this.items}}
                           <li class="list-group-item">
                                <span class="badge"> ${{ this.price }}</span>
                                {{ this.item.name }} | {{ this.qty }} Units
                            </li>
                           {{/each}}
                        </ul>
                  </div>
                </div>
                <div class="panel-footer">$ 
                        <strong>Total price: ${{ this.cart.totalPrice }}</strong>   
                </div>
            {{/each}}
        </div>
</div>